<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1/10"
        android:textSize="32sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score : 0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:30"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textAlignment="textEnd"
           android:paddingEnd="15dp"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Why Java is popular?"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="20dp"
            android:background="@drawable/question_view_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton"
                android:background="@drawable/default_option_a"
                android:padding="25dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:paddingStart="80dp"/>
            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton"
                android:layout_marginTop="15dp"
                android:background="@drawable/default_option_b"
                android:padding="25dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:paddingStart="80dp"/>
            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton"
                android:background="@drawable/default_option_c"
                android:layout_marginTop="15dp"
                android:padding="25dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:paddingStart="80dp"/>
            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:freezesText="true"
                android:text="RadioButton"
                android:background="@drawable/default_option_d"
                android:layout_marginTop="15dp"
                android:padding="25dp"
                android:textSize="24sp"
                android:paddingStart="80dp"
                android:textColor="@color/black"



                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/submit_bt_background"

            android:padding="20dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>