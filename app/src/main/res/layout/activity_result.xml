<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:gravity="center"
    tools:context=".ResultActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result of Quiz"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:background="@drawable/result_bg"
        android:layout_marginStart="10dp"
        >
        <TextView
            android:id="@+id/result_tv_HighScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Score: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textAlignment="textStart"

            />

        <TextView
            android:id="@+id/result_tv_Num_of_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Questions: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:id="@+id/result_tv_correct_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/result_tv_wrong_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong: "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_result_play_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_bt_bg"
                android:padding="10dp"
                android:text="Play Again"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_result_main_menu"
                android:text="Main Menu"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_bt_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>